@model LmycWeb.Models.RoleViewModel
@{
    ViewData["Title"] = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>@Html.DisplayNameFor(model => model.RoleName)<span>:</span> @Html.DisplayFor(model => model.RoleName)</h4>
    <hr />

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Users.Single().UserName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Users.Single().Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Users.Single().LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Users.Single().FirstName)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Users)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <form asp-action="Delete">
        <input type="hidden" asp-for="RoleId" />
        <input type="submit" value="Delete" class="btn btn-default" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
