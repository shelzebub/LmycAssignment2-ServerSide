@model LmycWeb.Models.RoleViewModel
@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>@Html.DisplayNameFor(model => model.RoleName)<span>:</span> @Html.DisplayFor(model => model.RoleName)</h4>
<hr />

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Users.Single().UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Users.Single().Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Users.Single().LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Users.Single().FirstName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Users)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @using (Html.BeginForm("Add", "Roles", FormMethod.Post))
                    {
                        <input type="hidden" asp-for="RoleId" />
                        <input type="hidden" asp-for="RoleName" />
                        <input type="hidden" asp-for="UserId" value="@item.Id" />
                        <input class="btn btn-link" type="submit" value="Add" />
                    }
                    
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Details" asp-route-id="@Model.RoleId">Details</a> |
    <a asp-action="Index">Back to List</a>
</div>